#include <iostream>

using namespace std;

int km;
int m;
int millas;

int main(){
	
	cout<<"Introduce una distancia en km"<<endl;
	cin>>km;
	m=km*1000;
	cout<<"----------------------------------------------------------------"<<endl;
	cout<<"La distancia "<<km<<" kilometros en metros son "<<m<<" metros.";
	cout<<"----------------------------------------------------------------"<<endl;
	cout<<"Introduce una distancia en millas"<<endl;
	cin>>millas;
	m=millas*1852
	cout<<"---------------------------------------------------------------------"<<endl;
	cout<<"La distancia "<<millas<<" millas en metros son "<<m<<" metros"<<endl;
	cout<<"---------------------------------------------------------------------"<<endl;
	return 0;
	
}
